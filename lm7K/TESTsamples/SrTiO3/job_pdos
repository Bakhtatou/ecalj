#!/bin/bash
ext=srtio3
ddd=${ext}_pdos
echo $ddd $ext
ln -s rst.$ext rst.${ddd}
lmdir=../..
$lmdir/lmf --no-fixef0 --pdos:mode=2 --quit=band $ddd   |tee llmf_pdos
echo 1001,-1,1|$lmdir/lmdos --pdos:mode=2 $ddd |tee llmdos
mv dos.$ddd pdos.$ddd
echo 30,5,-1,1|$lmdir/pldos pdos.$ddd -lst='25+5;25+6;25+7;25+8;25+9' 
echo 'Check ps.pdos.* (postscript)!'
exit


### -lst='36+5;36+6;36+7;36+8;36+9' 
### -lst='5;6;7;8;9' is for d channel of Sr site. See output llmfdos. 5-9 is for d channel.
### Sperical harmonics is detailed in GW note.
### for NSPIN=2, you need to use -lst='9;11;13;15;17'

