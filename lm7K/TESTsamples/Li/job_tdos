#!/bin/bash
ddd=li_dos
lmdir=../..
ln -s rst.li rst.${ddd}
# modify ctrl file as I did. METAL=T Q=BAND nk=8. Check SAVEDOS=T option
# this is also OK for 
# sed "s/#DOSOPTION#/SAVDOS=1 DOS=-1,1 NPTS=1001/g" ctrl.$ddd >ctrl.${ddd}_dos        
rm -rf wkp.$ddd

## I thinks this procedure may be not necessary efermi is detemined by double path procedure.
$lmdir/lmf $ddd --quit=band    |tee llmf_ef

$lmdir/lmf --no-fixef0 ${ddd} --quit=band |tee llmfdos  
echo 15,10,-1,1|$lmdir/pldos dos.${ddd} -ef=0 -lst='1'

echo "Check ps.dos* file"
