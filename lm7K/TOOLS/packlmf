#!/bin/bash
if [ $# != 2 ]; then
echo Set lm directrory. Usage: packlmf {name of tar.gz}  {lmf directory} {fftw} 
echo This is  at ecal/.
fi 
echo 
tar -zcvf $1 $2 $3 --exclude *.a --exclude *.o \
--exclude lmf \
--exclude lmf-MPI \
--exclude lmf-MPIK \
--exclude lmfgw \
--exclude lmfgw-MPI \
--exclude lmfgw-MPIK \
--exclude lmdos \
--exclude lm67 \
--exclude lmchk \
--exclude lmfa \
--exclude lmf2gw \
--exclude rdcmd \
--exclude fplot \
--exclude plbnds \
--exclude pldos
exit
