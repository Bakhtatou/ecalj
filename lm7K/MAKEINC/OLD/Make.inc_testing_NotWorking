## patch section for ./subs/subs.a
$(SUBS)(ropbes.o): $(lmdir)subs/ropbes.F
	$(FC) $(FFLAGS_LESS3) -c ropbes.F
	ar rv $(SUBS) ropbes.o
	rm -f ropbes.o
 
$(SUBS)(ropyln.o): $(lmdir)subs/ropyln.F
	$(FC) $(FFLAGS_LESS3) -c ropyln.F
	ar rv $(SUBS) ropyln.o
	rm -f ropyln.o
 
$(SUBS)(spcgrp.o): $(lmdir)subs/spcgrp.F
	$(FC) $(FFLAGS_LESS) -c spcgrp.F
	ar rv $(SUBS) spcgrp.o
	rm -f spcgrp.o

$(SUBS)(m_toksw.o) $(lmdir)m_toksw.mod $(lmdir)m_gtv.mod:	$(lmdir)subs/m_toksw.F
	$(FC) $(FFLAGS_NONE) -c m_toksw.F
	ar rv $(SUBS) m_toksw.o
	rm -f m_toksw.o

$(SUBS)(m_rdctrl.o) $(lmdir)m_rdctrl.mod:	$(lmdir)subs/m_rdctrl.F
	$(FC) $(FFLAGS_NONE) -c m_rdctrl.F
	ar rv $(SUBS) m_rdctrl.o
	rm -f m_rdctrl.o

$(SUBS)(m_rdctrlchk.o) $(lmdir)m_rdctrlchk.mod:	$(lmdir)subs/m_rdctrlchk.F
	$(FC) $(FFLAGS_NONE) -c m_rdctrlchk.F
	ar rv $(SUBS) m_rdctrlchk.o
	rm -f m_rdctrlchk.o

## ... patch section for ./fp/subs.a
$(FP)(rhogkl.o): rhogkl.F
	$(FC) $(FFLAGS_LESS) -c rhogkl.F
	ar rv $(FP) rhogkl.o
	rm -f rhogkl.o



################################################
# module dependency (fixed). What *.F contains what modules.
################################################
$(SUBS)(m_rdctrl.o):	$(lmdir)m_gtv.mod $(lmdir)m_toksw.mod
$(SUBS)(m_rdctrlchk.o):	$(lmdir)m_gtv.mod $(lmdir)m_toksw.mod
$(SUBS)(rdctrl2.o):	$(lmdir)m_gtv.mod $(lmdir)m_rdctrl.mod
$(SUBS)(rdctrlchk.o):	$(lmdir)m_gtv.mod $(lmdir)m_rdctrlchk.mod
$(FP)(bndfp.o):	$(lmdir)m_rdctrl.mod



################################################
# --- Make rules ---(fixed).
################################################
.F.o: 
	fpp $(CPP_SW) $@  > xxx.F
	$(FC) $(FFLAGS_NONE) -c xxx.F
	mv xxx.o $@.o
	ar rv $(SLATSM) $@.o
	rm -f $@.o xxx.F
 
.F.a: 
	fpp $(CPP_SW) $<  > xxx.F
	$(FC) $(FFLAGS_NONE) -c xxx.F -o xxx.o
	mv xxx.o $%
	ar rv $@ $%

#	rm -f $%


################################################
# archiver (maybe fixed).
################################################
AR = ar
ARFLAGS = rv
RANLIB = ranlib


