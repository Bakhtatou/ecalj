############################################
# Fortran compiler and flags, and linker 
############################################
#FC = mpif90
#LK = mpif90
FC = f95
LK = f95
#
# where is modules?
#module = -module $(lmdir)
module = -J $(lmdir)
#
FFLAGS = -O3   $(CPP_SW) $(module)
FFLAGS_LESS = -O2   $(CPP_SW) $(module)
FFLAGS_LESS2 = -O1  $(CPP_SW) $(module)
FFLAGS_LESS3 = -O0  $(CPP_SW) $(module)
FFLAGS_NONE = -g    $(CPP_SW) $(module)
#
# safer option (debug)
#FFLAGS =      -g -cm -WB  $(CPP_SW) $(module)
#FFLAGS_LESS = -g -cm -WB  $(CPP_SW) $(module)
#FFLAGS_LESS2 = -g -cm -WB  $(CPP_SW) $(module)
#FFLAGS_LESS3 = -g -cm -WB  $(CPP_SW) $(module)
#FFLAGS_NONE = -g -cm -WB  $(CPP_SW) $(module)


###################################################
# CPP switches (instead of old ccomp procedure
###################################################
CPP_SW =  -DHASGETARG -DHASNARGS -DFDATE -DNOQUAD

#
#MPI  case
#CPP_SW = -DHASGETARG -DHASNARGS -DFDATE -UMPE -UMPIK -DMPI 
#
##MPIK case k-point parallelizaion in MPI
#CPP_SW = -DHASGETARG -DHASNARGS -DFDATE -UMPE -DMPIK -UMPI 

$(SLATSM)(syscall.o): syscall.F
	fpp $(CPP_SW) syscall.F  > xxx.F
	$(FC) $(FFLAGS_NONE) -c xxx.F
	mv xxx.o syscall.o
	ar rv $(SLATSM) syscall.o



############################################
### Patches for intel ifc ##################
#
# Note that $SLATSM... are defined below.
#
############################################
## ... patch section for ./slatsm/slatsm.a
$(SLATSM)(huntx.o): huntx.F
	$(FC) $(FFLAGS_LESS3) -c huntx.F
	ar rv $(SLATSM) huntx.o
	rm -f huntx.o
 
$(SLATSM)(hunti.o): hunti.F
	$(FC) $(FFLAGS_LESS3) -c hunti.F
	ar rv $(SLATSM) hunti.o
	rm -f hunti.o
 
