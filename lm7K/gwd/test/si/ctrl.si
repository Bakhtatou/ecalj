TESTLMF lmfa si
        lmf si --no-iactiv --oldvc
        rm -f mixm.si
TESTGW  echo -1 | lmfgwd --oldvc si --make-Q0P
        echo  0 | lmfgwd --oldvc si
        echo  1 | lmfgwd --oldvc si
        echo si | lmf2gw
TESTSIG lmf si -vsig=12 --rs=1,0 -vnit=1 --pr45 --no-iactiv
TSIGT   echo band pass before transformation ...
        rm -f mixm.si
        lmf si -vsig=12 --rs=1,0 -vnit=1 -vemaxs=2 --pr45 --no-iactiv 
        echo Rewrite sigm with approximate high-energy part:
        lmf si -vsig=12 --rs=1,0 -vnit=1 -vemaxs=2 --pr45 --wsig:trans=5
        echo use modified sigm.si and save for future tests
        cp sigm2.si sigm.si
        cp sigm.si sigm.si~
        echo Transformation to LDA basis, slightly offset k mesh
        lmf si -vsig=12 -vnk=4 -vbzjob=0 -vemaxs=2 --wsig:shftq:fbz:trans=1
        echo Eigenvectors in LDA basis, slightly offset k mesh
        lmf si -vsig=11 -vnk=4 -vbzjob=0 -vemaxs=2 --wsig:shftq:fbz:trans=3
        echo Transformation back to orbital basis
        lmf si -vsig=11 --wsig:trans=-1
        echo band pass with transformed sigm
        cp sigm3.si sigm.si
        rm -f mixm.si
        lmf si -vsig=12 -vemaxs=2 --rsig:fbz:shftq --rs=1,0 -vnit=1 --pr45 --no-iactiv 
        echo Redo, with transformation to smaller orbital basis: ES lmax=2 -> lmax=1
        cp sigm.si~ sigm.si 
        lmf si -vlmxe=1 -vsig=11 -vnk=4 -vbzjob=0 -vemaxs=2 --wsig:shftq:fbz:trans=3
        echo Transformation back to orbital basis
        lmf si -vlmxe=1 -vsig=11 --wsig:trans=-1
        echo band pass with transformed sigm
        cp sigm3.si sigm.si
        rm -f mixm.si
        lmf si -vlmxe=1 -vsig=12 -vemaxs=2 --rsig:fbz:shftq --rs=1,0 -vnit=1 --pr45 --no-iactiv 
