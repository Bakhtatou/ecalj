#!/bin/bash
ddd=$1
rm -rf wkp.$ddd
lmf $ddd --quit=band    |tee llmf_ef
lmf --band:fn=syml $ddd  |tee llmf_band

echo -15,15,15,15|plbnds -fplot -ef=0 -scl=13.605  $ddd
#echo -15,15,15,15|plbnds -fplot -gnuplot -ef=0 -scl=13.605  $ddd
#sed -e "s/pause -1//g" bnds.gnu > bnds.gnu.$ddd
#gnuplot -persist bnds.gnu.$ddd

fplot -f plot.plbnds ; mv ps.dat ps.band.$ddd
echo If you like, run 'gnuplot -persist bnds.gnu.* again.'


