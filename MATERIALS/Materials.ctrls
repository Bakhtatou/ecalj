NIOAF2:
# NOTE set MMOM. (it will be included in this...)
%const bohr=0.529177
STRUC   ALAT={a} PLAT= 0.5 0.5 1.0  0.5 1.0 0.5  1.0 0.5 0.5
SITE    ATOM=@1 POS=  .0   .0   .0
